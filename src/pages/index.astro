---
import { getCollection } from 'astro:content'
import Parcours, {
  type ParcoursInterface,
} from '../components/a-propos/Parcours.astro'
import BlogCard from '../components/blog/BlogCard.astro'
import ProjectCard from '../components/project/ProjectCard.astro'
import LayoutMain from '../layouts/LayoutMain.astro'
import { sortProject } from '../utils'
const projects = await getCollection('project')
const blogs = await getCollection('blog')
const lastProjects = projects.sort(sortProject).slice(0, 4)
const lastBlogs = blogs.reverse().slice(0, 4)
const parcoursUniversitaire: ParcoursInterface = {
  title: 'Parcours universitaire 👨‍🎓',
  parcoursItems: [
    {
      title: 'Université Paul Sabatier',
      debut: {
        mois: 8,
        annee: 2021,
      },
      fin: undefined,
      subtitle: 'Master Science du Logiciel',
      tasks: [
        'Méthode Agile SCRUM, Modelisation et Conception avec UML',
        'Java Spring Boot, Maven, XML',
        'Web Service REST & SOAP',
        "Les bases de l'UI/UX",
      ],
    },
    {
      title: 'Université de la Réunion',
      debut: {
        mois: 8,
        annee: 2018,
      },
      fin: {
        mois: 6,
        annee: 2021,
      },
      subtitle: 'Licence informatique',
      tasks: [
        'Programmation Web HTML, CSS, JS, PHP, JavaEE, NodeJS',
        'Language de programmation Java, JS, C, Python, SQL',
        "Compréhension et utilisation d'un environnement Linux",
      ],
    },
  ],
}
const experienceProfessionelle: ParcoursInterface = {
  title: 'Expérience proféssionelle 💻',
  parcoursItems: [
    {
      title: 'Ingénieur (Alternance)',
      debut: {
        mois: 5,
        annee: 2022,
      },
      fin: undefined,
      subtitle: 'Akka Technology (3djuump)',
      tasks: [
        "Création d'application utilisant des données 3D massive",
        'Developpement front end avec React et Typescript',
      ],
    },
    {
      title: "Création d'une application de comptabilité",
      debut: {
        mois: 11,
        annee: 2021,
      },
      fin: {
        mois: 6,
        annee: 2022,
      },
      subtitle: 'SatuSoftware',
      tasks: [
        'Recherche sur les technologies multiplateformes',
        'Utilisation de la méthode agile SCRUM',
        'Front End avec VueJS, SCSS et Axios pour consommer les API',
        "Back End avec NodeJS, expressJS, PostGresQL et l'ORM Sequelize pour fournir une API REST qui sera documenté avec Swagger",
      ],
    },
  ],
}
---

<LayoutMain
  title="Ronico Billy"
  description="Étudiant en master informatique à l'Université Paul Sabatier de Toulouse 👨‍🎓 et freelance dans mes heures perdus, j'ai un profil de développeur Full Stack Typescript 💻. Je suis polyvalent et maîtrise les diverses étapes de la création d'une application web ou mobile. De la compréhension des besoins des utilisateurs, au développement frontend et backend jusqu'au deploiement 🚀. Amoureux du typage fort, la téchnologie tRPC et gRPC m'interesse."
>
  <main>
    <div class="flex flex-col gap-y-8">
      <section>
        <div class="flex flex-col xl:flex-row xl:items-center gap-x-8 gap-y-8">
          <div>
            <p class="font-medium">Salut 👋</p>
            <h1 class="text-2xl font-bold pt-2">Je suis Ronico Billy</h1>
            <h2 class="text-xl font-semibold">
              Développeur full stack et freelance
            </h2>
            <div class="pt-4 text-sm">
              🚀 <strong
                >Prêt à transformer vos idées en applications performantes ?</strong
              > Riche d'une expérience concrète à travers de nombreux projets réussis,
              je transforme votre vision et vos idées en solutions logicielles concrètes..
              Ce qui me distingue :
              <ul class="mt-4">
                <li class="mt-2">
                  🎯 <strong>Maîtrise complète du cycle de développement</strong
                  > :
                  <ul class="ml-8 text-sm leading-6">
                    <li>
                      📋 Analyse approfondie des besoins et conception
                      d'architecture
                    </li>
                    <li>
                      💻 Développement frontend moderne et responsive avec
                      Next.js et React
                    </li>
                    <li>⚙️ Backend robuste avec Node.js et Express</li>
                    <li>
                      🚀 Déploiement optimisé sur des infrastructures cloud
                    </li>
                  </ul>
                </li>
                <li class="mt-2">
                  🛡️ <strong>Sécurité et fiabilité de bout en bout</strong> :
                  <ul class="ml-8 text-sm leading-6">
                    <li>✨ TypeScript pour un code sécurisé et maintenable</li>
                    <li>
                      🔄 tRPC pour une communication type-safe entre frontend et
                      backend
                    </li>
                    <li>🗄️ Prisma pour une gestion sécurisée des données</li>
                  </ul>
                </li>
                <li class="mt-2">
                  🤝 <strong>Partenaire stratégique et expérimenté</strong> :
                  <ul class="ml-8 text-sm leading-6">
                    <li>🎯 Véritable allié technique à vos côtés</li>
                    <li>📊 Compréhension approfondie de vos enjeux</li>
                    <li>💡 Analyse détaillée de vos besoins</li>
                    <li>✨ Solutions optimales alignées avec vos objectifs</li>
                  </ul>
                </li>
              </ul>
            </div>
          </div>
          <div>
            <iframe
              class="rounded aspect-video shadow-lg w-full xl:w-auto"
              width="500"
              height="250"
              src="https://www.youtube.com/embed/Kweffm42zj4?si=FCNELlNM3LrkI_ZF"
              title="YouTube video player"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              referrerpolicy="strict-origin-when-cross-origin"
              allowfullscreen
            ></iframe>
          </div>
        </div>
      </section>

      <section>
        <h3 class="text-xl font-bold pt-2">Mon parcours ⬆️</h3>
        <div
          class="grid xl:grid-cols-2 xl:grid-rows-1 grid-rows-2 grid-cols-1 gap-x-8 gap-y-4 mt-4"
        >
          <Parcours parcours={parcoursUniversitaire} />
          <Parcours parcours={experienceProfessionelle} />
        </div>
      </section>

      <section class="flex flex-col gap-y-4">
        <h3 class="text-xl font-bold pt-2">Mes derniers projets 💻</h3>
        <div
          class="grid grid-cols-1 sm:grid-cols-2 xl:grid-cols-3 2xl:grid-cols-4 gap-x-8 gap-y-8"
        >
          {lastProjects.map((project) => <ProjectCard project={project} />)}
        </div>
      </section>

      <section class="flex flex-col gap-y-4">
        <h3 class="text-xl font-bold pt-2">Mes derniers blogs 📖</h3>
        <div class="grid grid-cols-1 xl:grid-cols-2 gap-x-8 gap-y-8">
          {lastBlogs.map((blog) => <BlogCard blog={blog} />)}
        </div>
      </section>
    </div>
  </main>
</LayoutMain>
